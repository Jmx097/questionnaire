{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "DataManager": "readonly",
    "ValidationManager": "readonly",
    "ConditionalLogic": "readonly",
    "ResultsGenerator": "readonly",
    "AnimationManager": "readonly"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "multi-line"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
  }
}
